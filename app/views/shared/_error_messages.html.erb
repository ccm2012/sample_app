<% if user.errors.any? %>
  <div id="error-explanation">
    <div class="alert alert-danger">
      <%= t "static_pages.form_contain" %> <%= pluralize user.errors.count,
        (t "static_pages.error") %>.
    </div>
    <ul>
      <% user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
