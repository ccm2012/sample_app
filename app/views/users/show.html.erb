<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p> <%= @user.created_at %> , <%= @user.updated_at %> </p>
      <p> <%= l Time.now, format: :short %> </p>
    </section>
  </aside>
</div>
